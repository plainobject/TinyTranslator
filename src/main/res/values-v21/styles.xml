<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTheme" parent="android:Theme.Material.Light">
        <item name="android:colorAccent">@color/main</item>
        <item name="android:colorPrimary">@color/main</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorPrimaryDark">@color/main</item>
        <item name="android:navigationBarColor">@color/main</item>
    </style>
    <style name="splashTheme" parent="mainTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>
</resources>